{
    "openapi": "3.0.0",
    "info": {
      "title": "Stack overflow lite",
      "description": "A questions and answers app",
      "version": "1.0.0",
      "contact": {
          "email": "bryanreynolds70@gmail.com"
      },
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licences/MIT"
      }
    },
    "servers": [
      {
          "url": "/"
      }
  ],
    "tags": [
      {
        "name": "Home page",
        "description":"Welcome page when user visits the application"
      }
    ],
    "paths": {
      "/": {
        "get": {
          "tags": [
            "Home page"
          ],
          "summary": "Home page when user visits the application",
          "responses": {
            "200": {
              "description": "ok",
              "schema": {
                "type": "text/html"     
              }
            }
          }
        }
      },
      "/questions":{
        "get": {
          "tags": [
            "Questions page"
          ],
          "summary": "Questions page when not logged in",
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema":{
                    "$ref": "#/components/schemas/questions"
                  }
                } 
              }             
            }
          }
        }
      },
      "/question/{id}": {
          "get": {
            "tags": [
              "View question request"
            ],
            "summary": "Get question with given ID",
            "parameters": [
              {
                "in": "path",
                "name": "id",
                "required":"true",
                "description": "ID of the selected question to view",
                "schema": {
                  "$ref": "#/components/schemas/questions"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "ok",
                "schema": {
                  "$ref": "#/components/schemas/questions"
                }
              }
            }
          }
     
      }
    },
    "components": {
      "schemas": {
        "user": {
          "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "first_name": {
                "type": "string",
                "format": "string"
              },
              "last_name": {
                "type": "string",
                "format": "string"
              },
              "username": {
                "type": "string",
                "format": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "password": {
                "type": "string",
                "format": "string"
              }
            }
        },
        "questions": {
          "type": "array",
          "properties": {
            "id": {
              "type": "integer", 
              "format": "string"          
          },
          "username":{
            "type": "string",
            "format": "string"
          },
          "title": {
            "type": "string",
            "format": "string"
          },
          
          "body": {
            "type": "string",
            "format": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "number"
          }
        },
        "example" : {
          "id": "4",
          "username":"Galice",
          "title": "Javascript",
          "body": "What year was js launched?",
          "timestamp": "2022-10-26 10:57:24.609132"
        }

        }
      }
    }
}